#!/bin/sh
#~/.config/zsh/aliasrc
#
# Aliasrc is a file created to house all of the shell alias definitions, written in this file for portability. (Used in conjunction with functionrc, then called in the zshrc file).

# This removes all user-defined aliases just to avoid any potential issues when changing names of
# aliases.
unalias $(alias | cut -f 1 -d '=' | tr '\n' ' ')

# Sudo aliases.
alias sudo='sudo '	 		# Stupid fix for being able to use aliases with sudo.					
alias s='sudo'				# Aliases 's' to 'sudo'; all proceeding sudo aliases will use "s" instead.
alias sE='s -E '			# Alias to run sudo command but keep current environment variables.	
alias se='s -E $EDITOR '	# Alias to preserve current user's environment vars, and open $EDITOR.
alias sv='s -E nvim '		# Alias to open a file in nvim as sudo.

# Backup of Sudo aliases.
#	sudo='sudo '	 	# Stupid fix for being able to use aliases with sudo.					\
#	s='sudo'			# Shortens 'sudo' to 's'												\
#	sE='sudo -E '		# Alias to run sudo command but keep current environment variables.		\
#	se='s -E $EDITOR '	# Alias to preserve current user's environment vars, and open editor.	\

# Shortened browser/editor aliases.
alias \
	r='ranger'	\
	h='hunter ' \
	v='$EDITOR' \
	m='neomutt' \
	n='ncmpcpp' \
	t='tmux'

# Edit config file shortcuts.
alias \
	zrc='v ~/.config/zsh/.zshrc'	\
	zr='. ~/.config/zsh/.zshrc'		\
	nrc='v ~/.config/nvim/init.vim'	\
	tmc='v ~/.tmux.conf'			\
	arc='v ~/.config/zsh/aliasrc'	\
	frc='v ~/.config/zsh/functionrc'


# Automatically specifying options always used to a shortened alias for core file programs/utils.
alias \
	ls='ls --color=always'	\
	lt='ls -lth'			\
	l='ls -lh'				\
	la='ls -lah'			\
	lt='ls -lath'			\
	mv='mv -v'				\
	cp='cp -v'
#	lh='ls -a | grep "^\."' \

# Directory shortcuts.
alias \
	b='cd ..'								\
	conf='cd ~/.config'						\
	mn='cd /mnt'							\
	tmp='cd /tmp'							\
	d='cd ~/Documents'						\
	D='cd ~/Downloads'						\
	p='cd /home/drew/Documents/programming'	\
	pub='cd /mnt/Data/Public'				\
	priv='cd /mnt/Data/Drew'				\
	nvc='cd ~/.config/nvim'					\
	dot='cd ~/Documents/git/dotfiles'		\
	ba='cd ~/Documents/programming/bash'	\
	crypt='cd /mnt/Data/Drew/crypt'			\
	M='cd ~/Music'							\
	aptc='cd /etc/apt/'
	# Commented out for now since theres no use or reason to have it aliased.
	#netlogs='cd /mnt/Data/Drew/Documents/Network\ info/Network\ Logs/' \

# General quality of life improvements and aliasing lengthy commands.
	alias ncmpcpp='ncmpcpp -b ~/.config/ncmpcpp/bindings'
	alias cgrep='grep --color=always'
	alias cg='grep --color=auto'
	alias gc='git clone '
	alias c='/usr/local/bin/colors'
	alias less='less -R'
	alias diff='diff --color=auto'
	alias ip='ip -color=always'

# Package manager aliases.
	# Aliases for apt.
	alias ins='sudo apt-get install '
	alias ac='apt-cache '
	alias aci='apt-cache --installed '
	alias acs='apt-cache search '
	alias ag='apt-get '
	alias adeps='apt-rdepends '
	alias aure='apt-get autoremove '
	alias aurep='apt-get autoremove --purge '

	# Alias to update and upgrade all python-pip packages.
	alias pipup='pip3 list --outdated --format=freeze | grep -v '^\-e' | cut -d = -f 1 | xargs -n1 \
	pip3 install -U'

# File manipulation.
	alias cx='chmod +x '
	alias mine='chown $USER:$GROUP '

# Sortcuts for connecting to sessions.
# Supposedly SSH might break if the remote machine does not have the same $TERM variable.
# [Unsure of this since the environment variables are applied in each host's session.]
	#alias ssh='TERM=xterm-direct ssh'			# Commenting this out for now.
	#alias seedbox='ssh -l pi -p 9999 192.168.1.28'
	#alias seedbox='ssh -l drew -p 9999 192.168.1.28'
	alias pi2='ssh -l pi -p 9999 192.168.1.28'
	alias nas='ssh -l drew -p 9999 -Y 192.168.1.31'
	alias cs='ssh -l cisco 192.168.1.2'
	alias cr='ssh -l cisco 192.168.1.3'
	alias tmr='tmux attach-session'
	
	# Alias to connect to NordVPN's auto-selected fastest server over UDP.
	alias vpn='sudo \
		openvpn /etc/openvpn/NordVPN/ovpn_udp/us4396.nordvpn.com.udp.ovpn'
